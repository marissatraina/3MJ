<div class="container">
  <h1>Create an Account</h1>
  <%= form_for @user do |f| %>
    Full Name: <%= f.text_field :name %>
    Email: <%= f.text_field :email %>
    Password: <%= f.password_field :password %>
    Confirm Password: <%= f.password_field :password_confirmation %>
    <%= f.submit "Sign Up" %>
  <% end %>
</div>
